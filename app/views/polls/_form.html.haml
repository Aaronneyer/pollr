= form_for @poll do |f|
  - if @poll.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poll.errors.count, "error")} prohibited this poll from being saved:"
      %ul
        - @poll.errors.full_messages.each do |msg|
          %li= msg
  .container
    .row
      .col-md-3.col-md-push-1
        .create-poll.main-poll
          .field
            = f.label :course
            = f.text_field :course
          .field
            = f.label :date
            = f.datetime_select :date
          .actions
            = f.submit 'Save'
      .col-md-4.col-md-push-4
        Wat

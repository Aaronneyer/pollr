%h3.page-title Editing poll
%h1.page-title= @poll.name

.container
  .row
    .col-md-6
      .create-poll
      = render 'form'
    .col-md-6
      

      %h3.page-description Polls
      .row
        %table.table
          %th Question
          %th Edit Question
          -@poll.questions.each do |question|
            %tr
              %td= link_to question.question, question_path
              %td= link_to 'Edit', edit_question_path

      %h4.page-description= link_to 'Add Question', new_question_path(:poll_id => @poll.id)



  = link_to 'Preview', @poll
  \|
  = link_to 'Back', edit_course_path(@poll.course_id)

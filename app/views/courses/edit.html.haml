%h1.page-title Editing course

= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg
.container
  .row
    .col-md-6
      .create-poll
      %h3.page-description Course Information
      = render 'form'
    .col-md-6
      %h3.page-description Polls
      .row
        %table.table
          %th Poll Name
          %th Poll Date
          %th Edit Poll
          -@course.polls.each do |poll|
            %tr
              %td= poll.name
              %td= poll.date
              %td= link_to 'Edit', poll

    
      %h4.page-description= link_to 'Add Poll', new_poll_path(:course_id => @course.id)


  = link_to 'Preview', @course
